<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

    <com.example.eight.TitleBarView
        android:id="@+id/titleChat"
        android:layout_width="match_parent" android:layout_height="48dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvChat"
        android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="1" android:padding="8dp" android:clipToPadding="false"/>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="56dp"
        android:paddingHorizontal="8dp" android:paddingVertical="8dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp" android:layout_height="match_parent"
            android:layout_weight="1" android:hint="输入消息" android:paddingHorizontal="12dp"/>
        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:text="发送"/>
    </LinearLayout>
</LinearLayout>
